{
  "compilerOptions": {
    "target": "ES5",        // Target ECMAScript version
    "module": "commonjs",   // Specify module code generation
    "rootDir": "./src",     // Specifies the root directory of input files
    "outDir": "./dist",     // Redirect output structure to the directory
    "strict": true,         // Enable all strict type-checking options
    "esModuleInterop": true,// Enable Emit __importStar and __importDefault helpers for runtime babel ecosystem compatibility
    "declaration": true,    // Generates corresponding '.d.ts' file.
    "declarationDir": "./dist",  // Output directory for .d.ts files
    "sourceMap": true      // Generates corresponding '.map' file.
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "tests"]
}